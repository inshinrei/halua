{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "src/index.ts",
    "src/loggerCore.ts",
    "src/types.ts"
  ],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}

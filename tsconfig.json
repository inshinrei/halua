{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["index.ts", "loggerCore.ts", "types.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
